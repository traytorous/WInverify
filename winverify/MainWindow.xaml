<Window x:Class="winverify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:winverify"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFE1E4E9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>


        <Label x:Name="lblTitle" Content="Winverify" HorizontalAlignment="Center" Margin="0,79,0,0" VerticalAlignment="Top" FontSize="100" FontFamily="Bahnschrift SemiBold Condensed" FontWeight="Normal"/>
        <Button x:Name="btnScan" Content="Scan System" HorizontalAlignment="Center" Margin="0,282,0,0" VerticalAlignment="Top" Width="149" FontSize="18" Click="Button_Click" Panel.ZIndex="-1"/>
        <ProgressBar x:Name="progressbarTitle" Visibility="Hidden" HorizontalAlignment="Center" Height="10" Margin="0,362,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
